<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleMyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">252dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleBeranda" >
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#151515</item>
    </style>

    <style name="TitleRiwayat">
        <item name="android:layout_width">215dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#151515</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/RoundedButtonShapeAppearance</item>
    </style>

    <style name="RoundedButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>