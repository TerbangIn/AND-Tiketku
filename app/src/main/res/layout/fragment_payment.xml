<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.PaymentFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/darkblue01"
            app:title="@string/tv_processing_payment"
            app:navigationIcon="@drawable/baseline_arrow_back_24" />

    </com.google.android.material.appbar.AppBarLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abl_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="15dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="@color/darkblue03"
                        app:strokeWidth="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_total_passengers"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_passengers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_passengers_payment"
                                        android:textSize="12sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_total_passengers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="5dp"
                                        android:text="@string/tv_total_passengers"
                                        android:textSize="12sp"
                                        android:textColor="@color/darkblue05"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toEndOf="@id/tv_passengers"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_detail_flight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/cl_total_passengers">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="start"
                                        android:padding="5dp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:id="@+id/ic_departure_location"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingHorizontal="5dp"
                                            android:src="@drawable/baseline_location_on_24"
                                            android:tint="@color/neutral03"/>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <com.google.android.material.textview.MaterialTextView
                                                android:id="@+id/tv_departure_location"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/tv_jakarta"
                                                android:textSize="14sp"
                                                android:textColor="@color/neutral05"
                                                android:fontFamily="@font/poppins_bold"/>

                                            <com.google.android.material.textview.MaterialTextView
                                                android:id="@+id/tv_departure_date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/tv_1_march_2023"
                                                android:textSize="12sp"
                                                android:textColor="@color/neutral05"
                                                android:fontFamily="@font/poppins_medium"/>

                                            <com.google.android.material.textview.MaterialTextView
                                                android:id="@+id/tv_departure_hour"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/tv__11_00"
                                                android:textSize="12sp"
                                                android:textColor="@color/neutral05"
                                                android:fontFamily="@font/poppins_medium"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent">

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_duration"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv__4h_0m"
                                            android:textSize="12sp"
                                            android:textColor="@color/neutral05"
                                            android:fontFamily="@font/poppins_medium"/>

                                        <View
                                            android:layout_width="75dp"
                                            android:layout_height="2dp"
                                            android:background="@color/neutral03"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end"
                                        android:padding="5dp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:id="@+id/ic_arrival_location"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingHorizontal="5dp"
                                            android:src="@drawable/baseline_location_on_24"
                                            android:tint="@color/neutral03"/>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <com.google.android.material.textview.MaterialTextView
                                                android:id="@+id/tv_arrival_location"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/tv_melbourne"
                                                android:textSize="14sp"
                                                android:textColor="@color/neutral05"
                                                android:fontFamily="@font/poppins_bold"/>

                                            <com.google.android.material.textview.MaterialTextView
                                                android:id="@+id/tv_arrival_date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/tv_5_25_march_2023"
                                                android:textSize="12sp"
                                                android:textColor="@color/neutral05"
                                                android:fontFamily="@font/poppins_medium"/>

                                            <com.google.android.material.textview.MaterialTextView
                                                android:id="@+id/tv_arrival_hour"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/tv__11_00"
                                                android:textSize="12sp"
                                                android:textColor="@color/neutral05"
                                                android:fontFamily="@font/poppins_medium"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_divider"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/cl_detail_flight">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:paddingHorizontal="20dp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent">

                                        <View
                                            android:layout_width="wrap_content"
                                            android:layout_height="2dp"
                                            android:background="@color/neutral03"/>

                                    </LinearLayout>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/cl_divider"
                                    android:padding="10dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_sign_booking_code"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_booking_code"
                                            android:textSize="14sp"
                                            android:textColor="@color/neutral05"
                                            android:fontFamily="@font/poppins_bold"/>

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_booking_code"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_15871125258"
                                            android:textSize="12sp"
                                            android:textColor="@color/neutral05"
                                            android:fontFamily="@font/poppins_medium"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent">

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_sign_class_code"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_class"
                                            android:textSize="14sp"
                                            android:textColor="@color/neutral05"
                                            android:textAlignment="textStart"
                                            android:fontFamily="@font/poppins_bold"/>

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_class_code"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_economy"
                                            android:textSize="12sp"
                                            android:textColor="@color/neutral05"
                                            android:fontFamily="@font/poppins_medium"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent">

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_price"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_idr_3650"
                                            android:textSize="14sp"
                                            android:textColor="@color/darkblue05"
                                            android:fontFamily="@font/poppins_bold"/>

                                    </LinearLayout>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_online_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/darkblue03"
                app:strokeWidth="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_container">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/ll_container_sign_online_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@color/darkblue03"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_online_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_gopay"
                            android:textColor="@color/neutral01"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_container_biodata_online_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_container_sign_online_payment">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_sign_number_online_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_phone_number"
                            android:textColor="@color/darkblue05"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginVertical="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tie_number_online_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="@string/tv_0813"
                            android:layout_marginHorizontal="26dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_sign_number_online_payment"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_sign_name_online_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_full_name"
                            android:textColor="@color/darkblue05"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginVertical="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tie_number_online_payment"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tie_name_online_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="@string/tv_harry_potter"
                            android:layout_marginHorizontal="26dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_sign_name_online_payment"/>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_online_payment"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/iv_gopay"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tie_name_online_payment"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_online_pay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="16dp"
                            android:backgroundTint="@color/darkblue04"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginVertical="5dp"
                            android:paddingVertical="12dp"
                            android:text="@string/tv_pay"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_online_payment"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_bank_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:paddingBottom="20dp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/darkblue03"
                app:strokeWidth="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_online_payment">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/ll_container_sign_bank_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@color/darkblue03"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_count_biodata_bank_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_credit_card"
                            android:textColor="@color/neutral01"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_container_biodata_bank_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_container_sign_bank_payment">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_sign_number_bank_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_credit_card"
                            android:textColor="@color/darkblue05"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginVertical="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tie_number_bank_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="@string/tv_4480_0000_0000_0000"
                            android:layout_marginHorizontal="26dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_sign_number_bank_payment"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_sign_name_bank_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_card_holder_name"
                            android:textColor="@color/darkblue05"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginVertical="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tie_number_bank_payment"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tie_name_bank_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="@string/tv_harry_potter"
                            android:layout_marginHorizontal="26dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_sign_name_bank_payment"/>

                        <LinearLayout
                            android:id="@+id/ll_bank_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginVertical="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tie_name_bank_payment">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tv_cvv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_cvv"
                                    android:textColor="@color/darkblue05"
                                    android:textStyle="bold" />

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_cvv_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:hint="@string/et_cvv"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginHorizontal="20dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tv_expiry_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_expiry_date"
                                    android:textColor="@color/darkblue05"
                                    android:textStyle="bold" />

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_expiry_date_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:hint="@string/et_expiry_date"/>

                            </LinearLayout>

                        </LinearLayout>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_bank_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/payment_option"
                            android:layout_marginVertical="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ll_bank_code"/>

