<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.CheckoutFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/abl_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/darkblue01"
                    app:title="@string/tv_flight_details"
                    app:navigationIcon="@drawable/baseline_arrow_back_24" />

            </com.google.android.material.appbar.AppBarLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_container"
            app:layout_constraintBottom_toTopOf="@id/cl_container_total_price">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_notify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_sign_departure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_jakarta"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/darkblue05"
                            android:fontFamily="@font/poppins_bold"
                            android:paddingHorizontal="5dp"/>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/divider"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:background="@color/neutral03"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_sign_arrival"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_melbourne"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/darkblue05"
                            android:fontFamily="@font/poppins_bold"
                            android:paddingHorizontal="5dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_sign_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv__4h_0m"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/darkblue05"
                            android:fontFamily="@font/poppins_bold"
                            android:paddingHorizontal="5dp"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_detail_flight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_notify">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            app:strokeColor="@color/darkblue03"
                            app:strokeWidth="3dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_booking_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="10dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_passengers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_booking_code_demo"
                                        android:textSize="16sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_total_passengers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="5dp"
                                        android:text="@string/tv_15871125258"
                                        android:textSize="16sp"
                                        android:textColor="@color/darkblue05"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toEndOf="@id/tv_passengers"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_departure_flight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/cl_booking_code">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_departure_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv__07_00"
                                        android:textSize="16sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_bold"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_departure"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_departure"
                                        android:textSize="16sp"
                                        android:textColor="@color/darkblue03"
                                        android:fontFamily="@font/poppins_bold"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_departure_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_1_march_2023"
                                        android:textSize="16sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_regular"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/tv_departure_time"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_departure_place"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_departure_place"
                                        android:textSize="16sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/tv_departure_date"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_minus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_minus"
                                        android:textSize="16sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toEndOf="@id/tv_departure_place"
                                        app:layout_constraintTop_toBottomOf="@id/tv_departure_date"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_departure_place_detail"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_departure_place_detail"
                                        android:textSize="16sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toEndOf="@id/tv_minus"
                                        app:layout_constraintTop_toBottomOf="@id/tv_departure_date"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_divider_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/cl_departure_flight">

                                    <com.google.android.material.divider.MaterialDivider
                                        android:id="@+id/divider_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/neutral03"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_detail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/cl_divider_1">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:id="@+id/ic_flower_icon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_flowers"
                                        android:paddingVertical="50dp"
                                        android:paddingHorizontal="8dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_flight_class_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_flight_class_name"
                                        android:textSize="14sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_bold"
                                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_plane_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_plane_name"
                                        android:textSize="14sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_bold"
                                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                                        app:layout_constraintTop_toBottomOf="@id/tv_flight_class_name"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_information"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_information"
                                        android:textSize="14sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_bold"
                                        android:paddingTop="6dp"
                                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                                        app:layout_constraintTop_toBottomOf="@id/tv_plane_name"/>

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/cl_passenger_first"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                                        app:layout_constraintTop_toBottomOf="@id/tv_information">

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_passenger_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_passenger_count"
                                            android:textSize="14sp"
                                            android:textColor="@color/darkblue05"
                                            android:fontFamily="@font/poppins_medium"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"/>

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_passenger_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="5dp"
                                            android:paddingEnd="2dp"
                                            android:text="@string/tv_mr"
                                            android:textSize="14sp"
                                            android:textColor="@color/darkblue05"
                                            android:fontFamily="@font/poppins_medium"
                                            app:layout_constraintStart_toEndOf="@id/tv_passenger_count"
                                            app:layout_constraintTop_toTopOf="parent"/>

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_passenger_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_harry_potter"
                                            android:textSize="14sp"
                                            android:textColor="@color/darkblue05"
                                            android:fontFamily="@font/poppins_medium"
                                            app:layout_constraintStart_toEndOf="@id/tv_passenger_title"
                                            app:layout_constraintTop_toTopOf="parent"/>

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_passenger_id"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_id_demo"
                                            android:textSize="14sp"
                                            android:textColor="@color/neutral05"
                                            android:fontFamily="@font/poppins_medium"
                                            app:textAllCaps="true"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/tv_passenger_count"/>

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_passenger_code"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_15871125258"
                                            android:textSize="14sp"
                                            android:textColor="@color/neutral05"
                                            android:fontFamily="@font/poppins_medium"
                                            android:paddingStart="5dp"
                                            app:layout_constraintStart_toEndOf="@id/tv_passenger_id"
                                            app:layout_constraintTop_toBottomOf="@id/tv_passenger_name"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/cl_passenger_two"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                                        app:layout_constraintTop_toBottomOf="@id/cl_passenger_first">

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_passenger_count_second"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_passenger_count"
                                            android:textSize="14sp"
                                            android:textColor="@color/darkblue05"
                                            android:fontFamily="@font/poppins_medium"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"/>

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_passenger_title_second"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="5dp"
                                            android:paddingEnd="2dp"
                                            android:text="@string/tv_mr"
                                            android:textSize="14sp"
                                            android:textColor="@color/darkblue05"
                                            android:fontFamily="@font/poppins_medium"
                                            app:layout_constraintStart_toEndOf="@id/tv_passenger_count_second"
                                            app:layout_constraintTop_toTopOf="parent"/>

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_passenger_name_second"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_harry_potter"
                                            android:textSize="14sp"
                                            android:textColor="@color/darkblue05"
                                            android:fontFamily="@font/poppins_medium"
                                            app:layout_constraintStart_toEndOf="@id/tv_passenger_title_second"
                                            app:layout_constraintTop_toTopOf="parent"/>

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_passenger_id_second"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_id_demo"
                                            android:textSize="14sp"
                                            android:textColor="@color/neutral05"
                                            android:fontFamily="@font/poppins_medium"
                                            app:textAllCaps="true"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/tv_passenger_count_second"/>

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/tv_passenger_code_second"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tv_15871125258"
                                            android:textSize="14sp"
                                            android:textColor="@color/neutral05"
                                            android:fontFamily="@font/poppins_medium"
                                            android:paddingStart="5dp"
                                            app:layout_constraintStart_toEndOf="@id/tv_passenger_id_second"
                                            app:layout_constraintTop_toBottomOf="@id/tv_passenger_name_second"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_divider_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/cl_detail">

                                    <com.google.android.material.divider.MaterialDivider
                                        android:id="@+id/divider_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/neutral03"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_arrival_flight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/cl_divider_2">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_arrival_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv__07_00"
                                        android:textSize="16sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_bold"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_arrival"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_arrival"
                                        android:textSize="16sp"
                                        android:textColor="@color/darkblue03"
                                        android:fontFamily="@font/poppins_bold"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_arrival_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_1_march_2023"
                                        android:textSize="16sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_regular"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/tv_arrival_time"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tv_arrival_place"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_melbourne_international_airport"
                                        android:textSize="16sp"
                                        android:textColor="@color/neutral05"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/tv_arrival_date"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_price_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cl_detail_flight">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_sign_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_price_details"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/neutral05"
                            android:fontFamily="@font/poppins_bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_adult_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_2_adults"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/neutral05"
                            android:fontFamily="@font/poppins_medium"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_sign_month"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_adult_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_idr_950"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/neutral05"
                            android:fontFamily="@font/poppins_medium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_sign_month"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_baby_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_1_baby"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/neutral05"
                            android:fontFamily="@font/poppins_medium"
                            app:layout_constraintStart_toStartOf="parent"
