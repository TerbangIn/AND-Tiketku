<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.NotifikasiFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_notifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="64dp"
        android:text="@string/notifikasi"
        android:textStyle="bold"
        android:textColor="@color/neutral05"
        android:fontFamily="@font/poppins_medium"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_icon_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_bell"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notifikasi"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_alert_promosi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="@string/promosi"
        android:textColor="@color/neutral03"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_icon_bell"
        app:layout_constraintTop_toBottomOf="@id/tv_notifikasi"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="@string/_20_maret_14_04"
        android:textColor="@color/neutral03"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/tv_alert_promosi"
        app:layout_constraintTop_toBottomOf="@id/tv_notifikasi"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_potongan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="@string/potongan_tiket"
        android:textStyle="bold"
        android:textColor="@color/neutral05"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_icon_bell"
        app:layout_constraintTop_toBottomOf="@id/tv_alert_promosi"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_syarat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="@string/syarat_dan_ketentuan_berlaku"
        android:textStyle="bold"
        android:textColor="@color/neutral03"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_icon_bell"
        app:layout_constraintTop_toBottomOf="@id/tv_potongan"/>

</androidx.constraintlayout.widget.ConstraintLayout>