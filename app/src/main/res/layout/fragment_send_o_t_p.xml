<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SendOTPFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/baseline_arrow_back_24" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_masukkan_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="106dp"
                android:text="@string/masukkan_otp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_kirimkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginVertical="23dp"
                android:text="@string/ketik_6_digit_kode_yang_dikirimkan"
                android:textColor="@color/neutral05"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_masukkan_otp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_ke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:text="@string/ke"
                android:textColor="@color/neutral05"
                app:layout_constraintEnd_toEndOf="@id/tv_kirimkan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_kirimkan" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="@string/_6281212121212"
                android:textColor="@color/neutral05"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tv_ke"
                app:layout_constraintTop_toBottomOf="@id/tv_kirimkan" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_kode1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusBottomEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusTopStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_kode1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/neutral02"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_kode2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusBottomEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusTopStart="18dp"
                app:layout_constraintStart_toEndOf="@id/ti_kode1"
                app:layout_constraintTop_toBottomOf="@id/tv_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_kode2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/neutral02"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_kode3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusBottomEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusTopStart="18dp"
                app:layout_constraintStart_toEndOf="@id/ti_kode2"
                app:layout_constraintTop_toBottomOf="@id/tv_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_kode3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/neutral02"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_kode4"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusBottomEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusTopStart="18dp"
                app:layout_constraintStart_toEndOf="@id/ti_kode3"
                app:layout_constraintTop_toBottomOf="@id/tv_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_kode4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/neutral02"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_kode5"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusBottomEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusTopStart="18dp"
                app:layout_constraintStart_toEndOf="@id/ti_kode4"
                app:layout_constraintTop_toBottomOf="@id/tv_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_kode5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/neutral02"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Repeat the above TextInputLayout and TextInputEditText for et_kode2 until et_kode6 -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
