<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/darkblue03"
                app:strokeWidth="3dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_departure_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv__07_00"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_departure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_departure"
                        android:textSize="16sp"
                        android:textColor="@color/darkblue03"
                        android:fontFamily="@font/poppins_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_departure_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_1_march_2023"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_departure_time"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_departure_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_departure_place"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_departure_date"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_minus"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_medium"
                        app:layout_constraintStart_toEndOf="@id/tv_departure_place"
                        app:layout_constraintTop_toBottomOf="@id/tv_departure_date"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_departure_place_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_departure_place_detail"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_medium"
                        app:layout_constraintStart_toEndOf="@id/tv_minus"
                        app:layout_constraintTop_toBottomOf="@id/tv_departure_date"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/neutral03"
                        android:layout_marginVertical="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_departure_place"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ic_flower_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_flowers"
                        android:paddingVertical="50dp"
                        android:paddingHorizontal="8dp"
                        app:layout_constraintTop_toBottomOf="@id/divider_1"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_flight_class_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_flight_class_name"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_bold"
                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                        app:layout_constraintTop_toBottomOf="@id/divider_1"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_plane_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_plane_name"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_bold"
                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                        app:layout_constraintTop_toBottomOf="@id/tv_flight_class_name"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_information"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingTop="6dp"
                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                        app:layout_constraintTop_toBottomOf="@id/tv_plane_name"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_baggage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_baggage_20_kg"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingTop="6dp"
                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                        app:layout_constraintTop_toBottomOf="@id/tv_information"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_cabin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_cabin_baggage_7_kg"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                        app:layout_constraintTop_toBottomOf="@id/tv_baggage"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_flight_entertainment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_in_flight_entertainment"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                        app:layout_constraintTop_toBottomOf="@id/tv_cabin"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/neutral03"
                        android:layout_marginVertical="10dp"
                        app:layout_constraintStart_toEndOf="@id/ic_flower_icon"
                        app:layout_constraintTop_toBottomOf="@id/tv_flight_entertainment"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_arrival_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv__11_00"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider_2"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_arrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_arrival"
                        android:textSize="16sp"
                        android:textColor="@color/darkblue03"
                        android:fontFamily="@font/poppins_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider_2"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_arrival_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_1_march_2023"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_arrival"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_arrival_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_melbourne_international_airport"
                        android:textSize="16sp"
                        android:textColor="@color/neutral05"
                        android:fontFamily="@font/poppins_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_arrival_date"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>